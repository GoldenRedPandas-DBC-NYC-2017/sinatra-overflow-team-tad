<h1>DBC Overflow Questions</h1>

<div id="new-question-form-container">
<a id="new-question" href="/questions">Create a new question </a>
</div>

<br>
<div id="submit-new-question-container" style="display: none">
    Create your question below, or <a id="hide-form" href="/questions"> hide this form</a>
    <form id="submit-new-question" action="/questions" method="post">
    <textarea name="question[question_text]" rows="5"></textarea><br>
    <input type="submit" value="Submit">
  </form>
  <br>
</div>

<ul class="list">
  <% @questions.reverse.each do |question| %>
  <li><!-- Vote count -->
          <button formaction="/questions/<%= @question.id %>/upvote" formmethod="post" class="upvote" type="button">+1</button> | <button formaction="/questions/<%= @question.id %>/downvote" formmethod="post" class="downvote" type="button">-1</button> |
          <span class="votes-container">Votes: <%= @question.vote_sum %></span> |
          <!-- End vote count --><%= question.question_text %> | <b>by: </b>
          <!-- End vote count --><%= @users.find_by(id: question.user_id).first_name %> | <a href="#">comment</a> | <a href="#">answer</a> | <%= question.created_at %> </li>
  <% end %>
</ul>
